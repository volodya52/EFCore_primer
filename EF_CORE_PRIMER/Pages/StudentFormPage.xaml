<Page x:Class="EFCore.Pages.StudentFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EFCore.Pages"
      xmlns:Service="clr-namespace:EFCore.Service"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentFormPage">

    <Page.Resources>
        <Service:GroupService x:Key="gService"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Фамилия</Label>
                <TextBox Text="{Binding LastName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Имя</Label>
                <TextBox Text="{Binding FirstName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Отчество</Label>
                <TextBox Text="{Binding MiddleName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Дата рождения</Label>
                <DatePicker SelectedDate="{Binding Birthday}"/>
            </StackPanel>
            <StackPanel>
                <Label>Серия паспорта</Label>
                <TextBox Text="{Binding Passport.Series}"/>
            </StackPanel>
            <StackPanel>
                <Label>Номер паспорта</Label>
                <TextBox Text="{Binding Passport.Number}"/>
            </StackPanel>
            <StackPanel>
                <Label>Номер группы</Label>
                <ComboBox ItemsSource="{Binding Source={StaticResource gService},Path=Groups}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding Group}"/>
            </StackPanel>
            <StackPanel>
                <Button Click="Save">Сохранить в БД</Button>
                <Button Click="Back">Назад</Button>
            </StackPanel>
        </StackPanel>
       
    </Grid>
</Page>
