<Page x:Class="EFCore.Pages.AddCourse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EFCore.Pages" xmlns:efcore="clr-namespace:EFCore" 
      d:DataContext="{d:DesignInstance Type=efcore:CourseStudent}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCourse">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel>
                <Button Click="Back" Width="50" HorizontalAlignment="Left" Height="50">Назад</Button>
            </StackPanel>
            <StackPanel>
                <Label FontSize="28" Content="Информация о студенте"/>
                <TextBlock Text="{Binding CurrentStudent.FirstName}"/>
                <TextBlock Text="{Binding CurrentStudent.LastName}"/>
                <TextBlock Text="{Binding CurrentStudent.MiddleName}"/>
                <TextBlock Text="{Binding CurrentStudent.Group.Title}"/>
            </StackPanel>
            <StackPanel>
                <Label>Дата начала курса</Label>
                <StackPanel>
                    <DatePicker SelectedDate="{Binding service.StartDate}"/>
                </StackPanel>
                <Label>Дата завершения курса</Label>
                <StackPanel>
                    <DatePicker SelectedDate="{Binding service.EndDate}"/>
                </StackPanel>
                <Button>Записаться на курс</Button>
            </StackPanel>
            
        </StackPanel>

        <ListView Grid.Column="1"
                 ItemsSource="{Binding service.Course}"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding service.Title}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </Grid>
</Page>
